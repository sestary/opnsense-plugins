<model>
    <mount>//OPNsense/bind/tsig_key</mount>
    <description>BIND TSIG Key configuration</description>
    <version>1.0.0</version>
    <items>
        <tsig_keys>
            <tsig_key type="ArrayField">
                <enabled type="BooleanField">
                    <default>1</default>
                    <Required>Y</Required>
                </enabled>
                <algo type="OptionField">
                    <Required>N</Required>
                    <OptionValues>
                        <hmac-sha512>HMAC-SHA512</hmac-sha512>
                        <hmac-sha384>HMAC-SHA384</hmac-sha384>
                        <hmac-sha256>HMAC-SHA256</hmac-sha256>
                        <hmac-sha224>HMAC-SHA224</hmac-sha224>
                        <hmac-sha1>HMAC-SHA1</hmac-sha1>
                        <hmac-md5>HMAC-MD5</hmac-md5>
                    </OptionValues>
                </algo>
                <name type="TextField">
                    <Required>Y</Required>
                    <default></default>
                </name>
                <secret type="TextField">
                    <Required>Y</Required>
                    <default></default>
                </secret>
            </tsig_key>
        </tsig_keys>
    </items>
</model>
